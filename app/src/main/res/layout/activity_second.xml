<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="5dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtLabelDetalle"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:textColor="?attr/colorPrimaryVariant"
                android:textSize="18dp"
                android:text="Detalles del Sensor"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtLabelNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:textColor="?attr/colorSecondaryVariant"
                android:textSize="15dp"
                android:text="Nombre:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="16dp"
                android:textColor="?attr/colorSecondary"
                android:textSize="14dp"
                android:text="valueNombre" />

            <TextView
                android:id="@+id/txtLabelTipoSensor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:textColor="?attr/colorSecondaryVariant"
                android:textSize="15dp"
                android:text="Tipo Sensor:"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txtTipoSensor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="16dp"
                android:textColor="?attr/colorSecondary"
                android:textSize="14dp"
                android:text="valueTipoSensor" />

            <TextView
                android:id="@+id/txtLabelVendor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:textColor="?attr/colorSecondaryVariant"
                android:textSize="15dp"
                android:text="Vendor: "
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txtVendor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="16dp"
                android:textColor="?attr/colorSecondary"
                android:textSize="14dp"
                android:text="valueVendor" />


            <TextView
                android:id="@+id/txtLabelResolucion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:textColor="?attr/colorSecondaryVariant"
                android:textSize="15dp"
                android:text="Resolución: "
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txtResolucion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="16dp"
                android:textColor="?attr/colorSecondary"
                android:textSize="14dp"
                android:text="valueResolucion" />


            <TextView
                android:id="@+id/txtLabelPoder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:textColor="?attr/colorSecondaryVariant"
                android:textSize="15dp"
                android:text="Poder: "
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txtPoder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="16dp"
                android:textColor="?attr/colorSecondary"
                android:textSize="14dp"
                android:text="valuePoder" />

            <TextView
                android:id="@+id/txtLabelVersion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:textColor="?attr/colorSecondaryVariant"
                android:textSize="15dp"
                android:text="Versión: "
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txtVersion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="16dp"
                android:textColor="?attr/colorSecondary"
                android:textSize="14dp"
                android:text="valueVersion" />


            <TextView
                android:id="@+id/txtLabelInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:textColor="?attr/colorSecondaryVariant"
                android:textSize="15dp"
                android:text="Medidas del Sensor: "
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txtInfoSensor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="16dp"
                android:textColor="?attr/colorPrimary"
                android:textSize="18dp"
                android:text="No disponible!!!" />

        </LinearLayout>


    </ScrollView>


</LinearLayout>